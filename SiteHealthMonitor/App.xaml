<Application x:Class="SiteHealthMonitor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SiteHealthMonitor">
    <Application.Resources>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Header="Запустить" Click="StartMonitoring" x:Name="StartMonitoring"/>
            <MenuItem Header="Остановить" Click="StopMonitoring" x:Name="StopMonitoring" Visibility="Collapsed"/>
            <Separator/>
            <MenuItem Header="Настройки" Click="OpenSettings" x:Name="Settings"/>
            <MenuItem Header="Проверить обновления" Click="CheckUpdates" x:Name="CheckUpdates"/>
            <MenuItem Header="О программе" Click="AboutProgram" x:Name="AboutProgram"/>
            <Separator/>
            <MenuItem Header="Выход" Click="ExitApp"/>
        </ContextMenu>
    </Application.Resources>
</Application>
