<Window x:Class="SiteHealthMonitor.Views.NewVersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Доступна новая версия" SizeToContent="Height" Width="350" ResizeMode="NoResize">
    <StackPanel Margin="30">
        <TextBlock TextAlignment="Center">Доступна новая версия программы</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Отмена" Margin="0,0,10,0" Click="CancelButton"/>
            <Button Content="Скачать" Click="Download"/>
        </StackPanel>
    </StackPanel>
</Window>